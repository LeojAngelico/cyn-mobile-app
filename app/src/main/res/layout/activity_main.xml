<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/root"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical"
>

    <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/white"
            app:itemIconSize="@dimen/dimen_24"
            app:itemTextAppearanceActive="@style/TextAppearance.Material3.LabelLarge"
            app:itemTextAppearanceInactive="@style/TextAppearance.Material3.LabelMedium"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/menu_bottom_nav"
            app:itemRippleColor="@android:color/transparent"
            app:itemIconTint="@color/bottom_nav_tint"
            app:itemTextColor="@color/bottom_nav_tint"
            app:itemBackground="@drawable/bottom_nav_item_background"
            app:itemActiveIndicatorStyle="@null"/>

</LinearLayout>
