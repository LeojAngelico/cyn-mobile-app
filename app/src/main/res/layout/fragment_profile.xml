<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       xmlns:tools="http://schemas.android.com/tools"
                                       android:background="@color/page_bg"
                                       android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top App Bar mimic -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ink_dark"
            android:paddingStart="@dimen/dimen_16"
            android:paddingEnd="@dimen/dimen_16"
            android:paddingTop="@dimen/dimen_16"
            android:paddingBottom="@dimen/dimen_16"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/headerTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/headerSubtitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_subtitle"
                    android:textColor="@color/white"
                    android:alpha="0.8"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <!-- Actions -->
            <ImageButton
                android:id="@+id/saveImageButton"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/profile_save_cd"
                android:src="@drawable/ic_save"
                app:tint="@color/white"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/closeImageButton"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:layout_marginStart="@dimen/dimen_8"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/profile_close_cd"
                android:src="@drawable/ic_close"
                app:tint="@color/white"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/editImageButton"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_36"
                android:minWidth="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:paddingStart="@dimen/dimen_12"
                android:paddingEnd="@dimen/dimen_12"
                android:text="@string/profile_edit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:icon="@drawable/ic_edit"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/dimen_6"
                app:iconTint="@color/white"
                app:backgroundTint="@color/ink_dark" />
        </LinearLayout>

        <!-- Content Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_16"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/dimen_20"
            app:strokeColor="@color/outline_soft"
            app:strokeWidth="@dimen/dimen_1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/surface_bg"
                android:padding="@dimen/dimen_16">

                <!-- Avatar + Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dimen_16">

                    <FrameLayout
                        android:layout_width="@dimen/dimen_96"
                        android:layout_height="@dimen/dimen_96"
                        android:background="@drawable/profile_avatar_bg"
                        android:foregroundGravity="center">

                        <TextView
                            android:id="@+id/initialsTextView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            tools:text="JD"
                            android:textColor="@color/on_surface"
                            android:textSize="@dimen/font_24"
                            android:textStyle="bold" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/displayNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_12"
                        tools:text="John Doe"
                        android:textColor="@color/on_surface"
                        android:textSize="@dimen/font_18"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/handleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4"
                        tools:text="@string/profile_username_handle_sample"
                        android:textColor="@color/on_surface_variant"
                        android:textSize="@dimen/font_14" />
                </LinearLayout>

                <!-- Stats Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="2"
                    android:padding="@dimen/dimen_8">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/profile_stat_bg"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen_16"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/totalTransactionsValueTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,247"
                            android:textStyle="bold"
                            android:textSize="@dimen/font_20" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_total_transactions"
                            android:textColor="@color/on_surface_variant"
                            android:gravity="center"
                            android:textSize="@dimen/font_14" />
                    </LinearLayout>

                    <Space
                        android:layout_width="@dimen/dimen_12"
                        android:layout_height="1dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/profile_stat_bg"
                        android:orientation="vertical"
                        android:padding="@dimen/dimen_16"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/successRateValueTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="87.3%"
                            android:textStyle="bold"
                            android:textSize="@dimen/font_20" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_success_rate"
                            android:textColor="@color/on_surface_variant"
                            android:textSize="@dimen/font_14" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Fields -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_12"
                    android:text="First Name"
                    android:textColor="@color/on_surface"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/firstNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:background="@drawable/input_field_focus_state"
                    android:paddingStart="@dimen/dimen_10"
                    android:paddingEnd="@dimen/dimen_10"
                    android:paddingTop="@dimen/dimen_12"
                    android:paddingBottom="@dimen/dimen_12"
                    android:textSize="@dimen/font_14"
                    android:hint="Enter first name"
                    android:inputType="textPersonName"
                    android:enabled="false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_12"
                    android:text="Middle Name"
                    android:textColor="@color/on_surface"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/middleNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:background="@drawable/input_field_focus_state"
                    android:paddingStart="@dimen/dimen_10"
                    android:paddingEnd="@dimen/dimen_10"
                    android:paddingTop="@dimen/dimen_12"
                    android:paddingBottom="@dimen/dimen_12"
                    android:textSize="@dimen/font_14"
                    android:hint="Enter middle name"
                    android:inputType="textPersonName"
                    android:enabled="false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_12"
                    android:text="Last Name"
                    android:textColor="@color/on_surface"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/lastNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:background="@drawable/input_field_focus_state"
                    android:paddingStart="@dimen/dimen_10"
                    android:paddingEnd="@dimen/dimen_10"
                    android:paddingTop="@dimen/dimen_12"
                    android:paddingBottom="@dimen/dimen_12"
                    android:textSize="@dimen/font_14"
                    android:hint="Enter last name"
                    android:inputType="textPersonName"
                    android:enabled="false" />

                <!-- Username -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_12"
                    android:text="@string/profile_username_label"
                    android:textColor="@color/on_surface"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/usernameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:background="@drawable/input_field_focus_state"
                    android:paddingStart="@dimen/dimen_10"
                    android:paddingEnd="@dimen/dimen_10"
                    android:paddingTop="@dimen/dimen_12"
                    android:paddingBottom="@dimen/dimen_12"
                    android:textSize="@dimen/font_14"
                    android:hint="@string/profile_username_hint"
                    android:inputType="textEmailAddress"
                    android:enabled="false" />

                <!-- Email -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_12"
                    android:text="@string/profile_email_label"
                    android:textColor="@color/on_surface"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:background="@drawable/input_field_focus_state"
                    android:paddingStart="@dimen/dimen_10"
                    android:paddingEnd="@dimen/dimen_10"
                    android:paddingTop="@dimen/dimen_12"
                    android:paddingBottom="@dimen/dimen_12"
                    android:textSize="@dimen/font_14"
                    android:hint="@string/profile_email_hint"
                    android:inputType="textEmailAddress"
                    android:enabled="false" />

                <!-- Phone number -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_12"
                    android:text="@string/profile_phone_label"
                    android:textColor="@color/on_surface"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/phoneEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:background="@drawable/input_field_focus_state"
                    android:paddingStart="@dimen/dimen_10"
                    android:paddingEnd="@dimen/dimen_10"
                    android:paddingTop="@dimen/dimen_12"
                    android:paddingBottom="@dimen/dimen_12"
                    android:textSize="@dimen/font_14"
                    android:hint="@string/profile_phone_hint"
                    android:inputType="phone"
                    android:enabled="false" />

                <!-- Address -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_12"
                    android:text="Address"
                    android:textColor="@color/on_surface"
                    android:textSize="@dimen/font_14"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/addressEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:background="@drawable/input_field_focus_state"
                    android:paddingStart="@dimen/dimen_10"
                    android:paddingEnd="@dimen/dimen_10"
                    android:paddingTop="@dimen/dimen_12"
                    android:paddingBottom="@dimen/dimen_12"
                    android:textSize="@dimen/font_14"
                    android:hint="Enter address"
                    android:inputType="textPostalAddress"
                    android:enabled="false" />

                <!-- Action Buttons -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/changePasswordButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:textSize="@dimen/font_14"
                    android:text="@string/profile_change_password"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/surface_bg"
                    app:strokeColor="@color/outline_soft"
                    app:strokeWidth="@dimen/dimen_1"
                    app:cornerRadius="@dimen/dimen_8"
                    android:visibility="gone"
                    android:textColor="@color/on_surface" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/apiSettingsButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40"
                    android:text="@string/profile_api_settings"
                    android:textAllCaps="false"
                    android:textSize="@dimen/font_14"
                    app:backgroundTint="@color/surface_bg"
                    app:strokeColor="@color/outline_soft"
                    app:strokeWidth="@dimen/dimen_1"
                    app:cornerRadius="@dimen/dimen_8"
                    android:visibility="gone"
                    android:textColor="@color/on_surface" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/deleteAccountButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_40"
                    android:text="@string/profile_delete_account"
                    android:textAllCaps="false"
                    android:textSize="@dimen/font_14"
                    app:cornerRadius="@dimen/dimen_8"
                    android:visibility="gone"
                    app:backgroundTint="@color/failed_chip_bg"
                    android:textColor="@color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
