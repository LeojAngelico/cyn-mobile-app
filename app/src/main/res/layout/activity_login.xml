<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/loginRootConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/page_bg">

    <ImageView
            android:id="@+id/loginLogoImageView"
            android:layout_width="@dimen/dimen_150"
            android:layout_height="@dimen/dimen_150"
            android:layout_marginTop="@dimen/dimen_30"
            android:layout_marginBottom="@dimen/dimen_30"
            android:src="@drawable/cyn_logo"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/login_logo_content_desc"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"/>

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/loginCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_24"
            android:layout_marginEnd="@dimen/dimen_24"
            app:cardCornerRadius="@dimen/dimen_24"
            app:cardBackgroundColor="@color/surface_bg"
            app:strokeColor="@color/outline_soft"
            app:strokeWidth="@dimen/dimen_1">

        <LinearLayout
                android:id="@+id/contentLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/dimen_24"
                android:paddingEnd="@dimen/dimen_24"
                android:paddingTop="@dimen/dimen_24"
                android:paddingBottom="@dimen/dimen_24"
                android:gravity="center_horizontal">

            <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_title_label"
                    android:textColor="@color/on_surface"
                    android:textSize="@dimen/font_26"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:paddingTop="@dimen/dimen_8"/>

            <TextView
                    android:id="@+id/subtitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_subtitle_label"
                    android:textColor="@color/on_surface_variant"
                    android:textSize="@dimen/font_15"
                    android:paddingTop="@dimen/dimen_8"
                    android:paddingBottom="@dimen/dimen_16"/>

            <!-- Username -->
            <TextView
                    android:id="@+id/usernameLabelTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login_username_label"
                    android:textColor="@color/on_surface"
                    android:textSize="@dimen/font_16"
                    android:textStyle="bold"/>
            <!-- Outer rounded border -->


                <EditText
                        android:id="@+id/usernameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingEnd="@dimen/dimen_10"
                        android:paddingTop="@dimen/dimen_12"
                        android:paddingBottom="@dimen/dimen_12"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:textSize="@dimen/font_14"
                        android:hint="@string/login_username_hint_label"
                        android:textColorHint="@color/on_surface_variant"
                        android:background="@drawable/input_field_focus_state"
                        android:inputType="textPersonName"
                        android:imeOptions="actionNext"/>


            <!-- Password -->
            <TextView
                    android:id="@+id/passwordLabelTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_12"
                    android:text="@string/login_password_label"
                    android:textColor="@color/on_surface"
                    android:textSize="@dimen/font_16"
                    android:textStyle="bold"/>

                <EditText
                        android:id="@+id/passwordEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/dimen_10"
                        android:paddingEnd="@dimen/dimen_10"
                        android:paddingTop="@dimen/dimen_12"
                        android:paddingBottom="@dimen/dimen_12"
                        android:textSize="@dimen/font_14"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:hint="@string/login_password_hint_label"
                        android:textColorHint="@color/on_surface_variant"
                        android:background="@drawable/input_field_focus_state"
                        android:inputType="textPassword"
                        android:imeOptions="actionDone"/>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/signInMaterialButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_54"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:text="@string/login_sign_in_label"
                    android:textAllCaps="false"
                    android:textSize="@dimen/font_16"
                    app:cornerRadius="@dimen/dimen_14"
                    app:backgroundTint="@color/ink_dark"
                    app:iconTint="@color/white"
                    android:textColor="@color/white"/>

            <LinearLayout
                    android:id="@+id/footerLinearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:gravity="center">

                <TextView
                        android:id="@+id/noAccountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login_no_account_label"
                        android:textColor="@color/on_surface"
                        android:textSize="@dimen/font_15"/>

                <TextView
                        android:id="@+id/signUpTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/login_sign_up_label"
                        android:layout_marginStart="@dimen/dimen_6"
                        android:textColor="@color/ink_dark"
                        android:textStyle="bold"
                        android:textSize="@dimen/font_15"
                        android:clickable="true"
                        android:focusable="true"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
