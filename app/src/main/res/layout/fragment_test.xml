<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       android:fillViewport="true"
                                       android:background="@color/page_bg">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ink_dark"
                android:paddingStart="@dimen/dimen_16"
                android:paddingEnd="@dimen/dimen_16"
                android:paddingTop="@dimen/dimen_16"
                android:paddingBottom="@dimen/dimen_16"
                android:gravity="center_vertical">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/headerTitleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/test_transaction"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_18"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/headerSubtitleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/test_your_3_legged_api_endpoint_verification"
                        android:textColor="@color/white"
                        android:alpha="0.8"
                        android:textSize="@dimen/font_12"/>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dimen_16">

            <!-- Transaction progress (visible only while running) -->
            <LinearLayout
                    android:id="@+id/progressContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/dimen_16">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/dimen_8">

                    <TextView
                            android:id="@+id/progressTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/test_progress_title"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_16"/>

                    <TextView
                            android:id="@+id/progressPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_16"/>
                </LinearLayout>

                <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_8"
                        android:progress="0"
                        android:max="100"
                        android:progressDrawable="@android:drawable/progress_horizontal"/>
            </LinearLayout>

            <!-- Section: 3-Legged API Endpoints -->
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_16"
                    app:cardUseCompatPadding="true">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/surface_bg"
                        android:padding="@dimen/dimen_16">

                    <!-- Header -->
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                        <ImageView
                                android:layout_width="@dimen/dimen_24"
                                android:layout_height="@dimen/dimen_24"
                                android:src="@drawable/ic_play"
                                app:tint="@color/black"/>

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/dimen_8"
                                android:text="@string/test_three_legged_title"
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_16"/>

                    </LinearLayout>

                    <TextView
                            android:id="@+id/testPhoneText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_8"
                            android:text="@string/test_phone_label"
                            android:textSize="@dimen/font_14"
                            android:textColor="?attr/colorOnSurfaceVariant"/>

                    <!-- Item: Authorization Code -->
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_16"
                            android:orientation="vertical">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                            <ImageView
                                    android:id="@+id/iconAuthCode"
                                    android:layout_width="@dimen/dimen_24"
                                    android:layout_height="@dimen/dimen_24"
                                    android:src="@drawable/ic_idle"/>

                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="@dimen/dimen_8"
                                    android:text="@string/test_auth_code"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/font_16"/>

                            <TextView
                                    android:id="@+id/statusAuthCode"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="@dimen/dimen_8"
                                    android:paddingEnd="@dimen/dimen_8"
                                    android:paddingTop="@dimen/dimen_4"
                                    android:paddingBottom="@dimen/dimen_4"
                                    android:text="@string/test_status_idle"
                                    android:textSize="@dimen/font_12"
                                    android:textColor="@color/black"
                                    android:background="@drawable/bg_status_idle"/>
                        </LinearLayout>

                        <TextView
                                android:id="@+id/urlAuthCode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_8"
                                android:text="@string/test_auth_code_url"
                                android:textSize="@dimen/font_12"
                                android:textColor="?attr/colorOnSurfaceVariant"/>

                        <TextView
                                android:id="@+id/urlRedirect"
                                android:layout_width="match_parent"
                                android:visibility="gone"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_8"
                                android:text="@string/test_redirect_url"
                                android:textSize="@dimen/font_12"
                                android:textColor="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_1"
                            android:layout_marginTop="@dimen/dimen_16"
                            android:background="@color/page_bg"/>

                    <!-- Item: Token Generation -->
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_16"
                            android:orientation="vertical">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                            <ImageView
                                    android:id="@+id/iconToken"
                                    android:layout_width="@dimen/dimen_24"
                                    android:layout_height="@dimen/dimen_24"
                                    android:src="@drawable/ic_idle"/>

                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="@dimen/dimen_8"
                                    android:text="@string/test_token_generation"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/font_16"/>

                            <TextView
                                    android:id="@+id/statusToken"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="@dimen/dimen_8"
                                    android:paddingEnd="@dimen/dimen_8"
                                    android:paddingTop="@dimen/dimen_4"
                                    android:paddingBottom="@dimen/dimen_4"
                                    android:text="@string/test_status_idle"
                                    android:textSize="@dimen/font_12"
                                    android:textColor="@color/black"
                                    android:background="@drawable/bg_status_idle"/>
                        </LinearLayout>

                        <TextView
                                android:id="@+id/urlToken"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_8"
                                android:text="@string/test_token_url"
                                android:textSize="@dimen/font_12"
                                android:textColor="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_1"
                            android:layout_marginTop="@dimen/dimen_16"
                            android:background="@color/page_bg"/>

                    <!-- Item: Number Verification Service -->
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_16"
                            android:orientation="vertical">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                            <ImageView
                                    android:id="@+id/iconNVS"
                                    android:layout_width="@dimen/dimen_24"
                                    android:layout_height="@dimen/dimen_24"
                                    android:src="@drawable/ic_idle"/>

                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="@dimen/dimen_8"
                                    android:text="@string/test_nvs"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/font_16"/>

                            <TextView
                                    android:id="@+id/statusNVS"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="@dimen/dimen_8"
                                    android:paddingEnd="@dimen/dimen_8"
                                    android:paddingTop="@dimen/dimen_4"
                                    android:paddingBottom="@dimen/dimen_4"
                                    android:text="@string/test_status_idle"
                                    android:textSize="@dimen/font_12"
                                    android:textColor="@color/black"
                                    android:background="@drawable/bg_status_idle"/>
                        </LinearLayout>

                        <TextView
                                android:id="@+id/urlNVS"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_8"
                                android:text="@string/test_nvs_url"
                                android:textSize="@dimen/font_12"
                                android:textColor="?attr/colorOnSurfaceVariant"/>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Start Transaction button -->
            <com.google.android.material.card.MaterialCardView
                    android:id="@+id/startCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_16"
                    app:cardUseCompatPadding="true">

                <FrameLayout
                        android:id="@+id/startContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foreground="?attr/selectableItemBackground"
                        android:background="@drawable/bg_button_primary"
                        android:padding="@dimen/dimen_10">

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_gravity="center">

                        <ImageView
                                android:id="@+id/startIcon"
                                android:layout_width="@dimen/dimen_24"
                                android:layout_height="@dimen/dimen_24"
                                android:src="@drawable/ic_play"
                                app:tint="@android:color/white"
                                android:layout_marginEnd="@dimen/dimen_8"/>

                        <TextView
                                android:id="@+id/startText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/test_start_transaction"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/font_16"/>
                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
